<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.serhii.samplecasino.views.halfCircleListView.HalfCircleListView
        android:id="@+id/half_circle_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/no_game_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/no_game" />

            <Button
                android:id="@+id/no_more_game_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/no_more_game"
                android:visibility="gone" />
        </RelativeLayout>

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>